<?xml version="1.0" encoding="UTF-8"?>

<phpunit
         backupGlobals="false"
         backupStaticAttributes="false"
         verbose="true">
         
         <!-- strict="true" -->
         <!-- bootstrap="tests/bootstrap.php" -->
       
  <testsuites>
    <testsuite name="DoSomething">
      <directory suffix="Test.php">tests/</directory>
      <!-- directory suffix="Test.php">tests/integration/</directory -->
    </testsuite>
  </testsuites>

  <logging>
    <log type="coverage-html" target="build/coverage" title="DoSomething"
         charset="UTF-8" yui="true" highlight="true"
         lowUpperBound="35" highLowerBound="70"/>
    <log type="coverage-clover" target="build/logs/clover.xml"/>
    <log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
  </logging>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">src</directory>
      <directory suffix=".module">src</directory>
      <directory suffix=".inc">src</directory>
      <directory suffix=".install">src</directory>
      <directory suffix=".test">src</directory>
      <directory suffix=".profile">src</directory>
      <directory suffix=".theme">src</directory>
      <exclude>
        <directory suffix=".tpl.php">src</directory>
        <!-- file>src/bootstrap.php</file -->
      </exclude>
    </whitelist>
  </filter>

</phpunit>
