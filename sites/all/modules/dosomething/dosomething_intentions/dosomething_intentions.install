<?php

/**
 * Implements hook_install().
 */
function dosomething_intentions_install() {
  $weight = db_select('system', 's')
                ->fields('s', array('weight'))
                ->condition('name', 'webform_entity', '=')
                ->execute()
                ->fetchField();
  db_update('system')
      ->fields(array('weight' => $weight +1))
      ->condition('name', 'dosomething_intentions', '=')
      ->execute();
}