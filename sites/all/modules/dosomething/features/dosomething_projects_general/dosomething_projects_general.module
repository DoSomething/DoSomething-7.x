      $alias_url = '/project/'. strtolower(str_replace(' ', '-', $params['project_title']));
    }
    
    $params['url'] = 'http://' . $_SERVER['HTTP_HOST'] . $alias_url;

    // Send welcome email message - sent by Mandrill if module enabled
