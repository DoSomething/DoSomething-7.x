 * message sent to the user. Implements hook_webform_submission_insert().
 *
 * @param array $node
 *   Standard node array created in the webform submission.
 * @param array $submission
 */
 //@todo: remove this when dosomething_subscribe_webform_submission_insert() is working.
function dosomething_projects_general_webform_submission_insert($node, $submission) {
  
  if ($node->type == 'project_report') {
    
    // Values to customize email message
    $params = array();
    
    // Gather active user details - creator of project
    global $user;
    
    // Get additional details about the user
