/**
 * Creates renderable array of login/logout links.
 */
function dosomething_blocks_login() {
  global $user;
  if (!$user->uid) {
    $output['#markup'] = l('Log in', 'user', array('query' => user_login_destination()));
  }
  else {
    $output['#markup'] = l('Log out', 'user/logout');
  }
  return $output;
}

