/**
 * Inserts a record for given user UID and node NID in reportbacks table.
 */
function dosomething_reportback_insert_reportback($uid, $nid) {
  $reportback = db_insert('dosomething_reportbacks')
  ->fields(array(
    'uid' => $uid,
    'nid' => $nid,
    'timestamp' => REQUEST_TIME,
    ))
  ->execute();
}

/**
 * Returns count of reportbacks for given user uid and given $nid.
 */
function dosomething_reportback_get_count_user_reportbacks($uid, $nid) {
	$result = db_select('dosomething_reportbacks', 'rb', array('target' => 'slave'))
	          ->fields('rb', array('uid'))
	          ->condition('uid', $uid)
            ->condition('nid', $nid)
            ->execute();
  return $result->rowCount();
}

/**
 * Form callback for reportback form for given loaded $node.
 */
function dosomething_reportback_form($form, &$form_state, $node) {
  $form['nid'] = array(
    '#type' => 'hidden',
    '#value' => $node->nid,
  );
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
    '#attributes' => array('class' => array('btn', 'primary', 'large')),
  );
  return $form;
}

/**
 * Form submit callback for reportback form.
 */
function dosomething_reportback_form_submit($form, &$form_state) {
  global $user;
  // Load node to find relevant reportback values.
  $node = node_load($form_state['values']['nid']);
  //@todo: Check if user has submitted max num of reportbacks.
  dosomething_reportback_insert_reportback($user->uid, $node->nid);
  //@todo: drupal_set_message reportback success msg.
}