/**
 * Get a serialized webform from a file and save it as a node.
 *
 * @param $path
 *   The file path on disc of the serialized node.
 */
function dosomething_picsforpets_general_save_webform_node($path) {
  $webform = unserialize(file_get_contents($path));
  $webform_data = $webform->webform;
  unset($webform->webform);
  node_save($webform);
  unset ($webform->webform);

  dosomething_picsforpets_general_recursively_readd_nid($webform_data, $webform->nid);
  $webform->webform = $webform_data;
  $webform_data['nid'] = $webform->nid;
  $webform->webform['record_exists'] = TRUE;
  foreach ($webform->webform['components'] as $key => $component) {
    $webform->webform['components'][$key]['nid'] = $webform->nid;
    if (!$webform->webform['components'][$key]['mandatory']) {
      $webform->webform['components'][$key]['mandatory'] = 0;
    }
  }
  $webform->path = array('alias' => 'pics-for-pets/submit-pet-picture', 'pathauto' => FALSE);
  node_save($webform);
  variable_set('picsforpets_animal_form_id', $webform->nid);
  return $webform;
}

/**
 * Recurse through a webform object and add a new $nid.
 */
function dosomething_picsforpets_general_recursively_readd_nid(&$thing, $nid) {
  if (is_array($thing) || is_object($thing)) {
    foreach ($thing as $key => &$value) {
      if (is_array($value) || is_object($thing)) {
        dosomething_picsforpets_general_recursively_readd_nid($value, $nid);
      }
      elseif ($key == 'nid') {
        $value = $nid;
      }
    }
  }
  return $thing;
}

/**
 * A function to update the webform node that needs to be imported for
 * deployment. N.B. In order for this to work the nodes directory in this module
 * MUST BE writable by the apache user (usually www-data) and so should probably
 * be owned or group owned by that user.
 */
function dosomething_picsforpets_general_update_node() {
  $nid = db_query_range('SELECT nid FROM {node} WHERE type = :type', 0, 1, array(':type' => 'fb_app_data_gathering_form'))->fetchField();
  $node = node_load($nid);
  unset($node->nid);
  unset($node->vid);
  $node->webform['record_exists'] = FALSE;

  $serialized = serialize($node);
  file_put_contents(drupal_get_path('module', 'dosomething_picsforpets_general') . '/nodes/pet_submission_form.txt', $serialized);
}

/**
 * Import of the webform nodes.
 */
function dosomething_picsforpets_general_regenerate_webform_node() {
  // Get the list of files from the directory. Only serialized text files.
  $file = drupal_get_path('module', 'dosomething_picsforpets_general') . '/nodes/pet_submission_form.txt';

  //Get the node data and save it into drupal
  dosomething_picsforpets_general_save_webform_node($file);
}

/**
