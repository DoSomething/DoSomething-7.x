/**
 * Implements hook_field_formatter_view().
 */
function dosomething_picsforpets_general_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $value = 0;
  foreach ($items as $item) {
    $value = $item['value'];
    if ($value > 999 && $value < 99999) {
      $value = round($value / 1000, 1) . 'k';
    }
    else if ($value > 99999 && $value < 999999) {
      $value = round($value / 1000, 0) . 'k';
    }
    else if ($value > 999999) {
      $value = round($value / 1000000, 1) . 'M';
    }
  }

  $element = array();
  $element [0] = array(
    '#markup' => '<span class="gallery-share-button">Share me</span><span class="picsforpets-share-count-arrow"></span><span class="gallery-share-count">' . $value . '</span>',
  );
  return $element;
}

/**
 * Additional validation handler to deal with shelter addresses on the submitted
 * pet.
 */
function dosomething_picsforpets_general_validate_pet_shelter($form, &$form_state) {
  $address_fields = domething_picsforpets_general_address_fields();
  // We need to have all the address field data set.
  foreach ($address_fields as $field => $name) {
    if (empty($form_state['values']['submitted']['find_your_shelter'][$field][LANGUAGE_NONE][0]['value'])) {
      // TODO: Error element is incorrect. It may need LANGUAGE_NONE][0][value,
      // but that wasn't working.
      $error_element = implode('][', $form['submitted']['find_your_shelter'][$field]['#parents']);
      form_set_error($error_element, t('%name is a required field', array('%name' => $name)));
    }
  }
}

/**
 * Additional submit handler to deal with storing the data from the address
 * fields and the entity reference fields associated with a pet's shelter.
 */
function dosomething_picsforpets_general_submit_pet_shelter($form, &$form_state) {
  $mismatch = FALSE;
  $address_fields = domething_picsforpets_general_address_fields();

  // If there is an entity reference then
  if (!empty($form_state['webform_entity']['submission']->field_fb_app_shelter_reference[LANGUAGE_NONE][0]['target_id'])) {
    $shelter = node_load($form_state['webform_entity']['submission']->field_fb_app_shelter_reference[LANGUAGE_NONE][0]['target_id']);
    $address = field_get_items('node', $shelter, 'field_pfp_address');
    // We store the values from the original node as an array with the keys
    // matching the webform address fields.
    $found_address = array(
      'field_fb_app_shelter_name' => $shelter->title,
      'field_fb_app_address' => $address[0]['thoroughfare'],
      'field_fb_app_city' => $address[0]['locality'],
      'field_fb_app_state' => $address[0]['administrative_area'],
      'field_fb_app_zip' => $address[0]['postal_code'],
    );
    foreach ($address_fields as $field => $name) {
      if ($found_address[$field] != $form_state['webform_entity']['submission']->submitted['find_your_shelter'][$field][LANGUAGE_NONE][0]['value']) {
        $mismatch = TRUE;
      }
    }
  }
  else {
    // If the entity reference isn't set then we really want the address fields
    // and not the entity reference. We treat it the same way we should a
    // mismatched address.
    $mismatch = TRUE;
  }

  if ($mismatch) {
    // Throw away the entity reference.
    unset($form_state['values']['submitted']['find_your_shelter']['field_fb_app_shelter_reference']);
    unset($form_state['webform_entity']['submission']->submitted['find_your_shelter']['field_fb_app_shelter_reference']);
    unset($form_state['webform_entity']['submission']->field_fb_app_shelter_reference);
  }
  else {
    // Throw away the address fields.
    foreach ($address_fields as $field => $name) {
      unset($form_state['values']['submitted']['find_your_shelter'][$field]);
      unset($form_state['webform_entity']['submission']->submitted['find_your_shelter'][$field]);
      unset($form_state['webform_entity']['submission']->{$field});
    }
  }
}

