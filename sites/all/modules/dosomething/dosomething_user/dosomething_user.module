/**
 * Form constructor for the user profile school field form.
 *
 * @see dosomething_user_school_form_submit()
 *
 * @ingroup forms
 */
function dosomething_user_school_form($form, &$form_state) {
  $form = array();
  drupal_add_library('ds_neue', 'ds-neue');
  $form['#attached']['js'][] = drupal_get_path('module', 'ds_neue') . '/js/location-finder.js';;
  $form['header'] = array(
    '#markup' => '<h1>What school do you go to?</h1>',
  );
  $form['location_finder'] = array(
    '#markup' => theme('ds_neue_location_finder', array(
        'help_text' => t('Enter the zip code of your school.'),
        'results_text' => t('Nearest schools for zipcode:'),
      )
    ),
  );
  $form['school_id'] = array(
    '#title' => 'School ID',
    '#description' => 'This field will be hidden, and pre-populated with the Location Finder results',
    '#type' => 'textfield',
    '#value' => '',
  );
  $form['no_school'] = array(
    '#type' => 'radios',
    '#prefix' => '<hr><p>Or:</p>',
    '#options' => array(
      0 => t('My school is not listed.'),
      1 => t('I am not affiliated with a school.'),
    ),
  );
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Update My Information'),
    '#attributes' => array('class' => array('btn', 'primary')),
  );
  return $form;
}

/**
 * Form submission handler for dosomething_user_school_form().
 *
 * @see dosomething_user_school_form()
 */
function dosomething_user_school_form_submit(&$form, &$form_state) {
  $school_id = check_plain($form_state['values']['school']);
}

