<?php

/**
 * @file
 * General tweaks and custom functionality.
 */

/**
 * Implements hook_form_profile2_form_alter().
 */
function dosomething_general_form_profile2_form_alter(&$form, &$form_state) {
  // Check to ensure that confirmed email address is the same as email address - issue a warning if they don't match.
  if ($form['#form_id'] == 'user_profile_form') { 
    if($form['profile_main']['field_user_email']['und'][0]['email']['#default_value'] != $form['profile_main']['field_user_confirm_email']['und'][0]['email']['#default_value']) {
      form_set_error('profile_main][field_user_confirm_email', t('Your confirmed email address must match your email address.'));
    }
  }
}

