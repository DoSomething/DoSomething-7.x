function dosomething_general_find_tfj_team() {
  global $user;
  $t = db_select('webform_submissions', 's')
    ->fields('s', array('sid'))
    ->condition('nid', 725896)
    ->condition('uid', $user->uid)
    ->condition('bundle', 'campaign_sign_up')
    ->orderBy('sid', 'DESC')
    ->range(0, 1);
  $team = reset($t->execute()->fetchAll());

  if (!empty($team->sid)) {
    drupal_goto('team/teensforjeans/' . $team->sid);
  }
  else {
    $p = profile2_load_by_user($user, 'main');
    if ($cell = $p->field_user_mobile[LANGUAGE_NONE][0]['value']) {
      // Make sure we get only the digits...and presume the last 10 are the real number.
      $cell = substr(preg_replace('#[^0-9]#', '', $cell), -10);
      // Rebuild with dashes
      $with = preg_replace('#([0-9]{3})([0-9]{3})([0-9]{4})#', '\\1-\\2-\\3', $cell);
      // Without dashes
      $without = $cell;

      $or = db_or();
      $or->condition('beta', $with);
      $or->condition('beta', $without);

      $r = db_select('sms_flow_records', 'r')
        ->condition($or);
      $r->leftJoin('field_data_field_user_mobile', 'm', 'm.field_user_mobile_value = r.alpha');
      $r->leftJoin('profile', 'p', 'p.pid = m.entity_id');
      $r->leftJoin('webform_submissions', 's', "s.uid = p.uid AND s.bundle = 'campaign_sign_up'");
      $r->fields('s', array('sid'));
      $r->condition('s.nid', 'r.nid');
      $r->orderBy('s.sid', 'DESC');
      $r->range(0, 1);

      $result = reset($r->execute()->fetchAll());
      if (!empty($result->sid)) {
        // If the user got invited to a particular team, send them to that team.
        drupal_goto('team/teensforjeans/' . $result->sid);
      }
      else {
        // Else, send them to the landing page.
        drupal_goto('teensforjeans');
      }
    }
  }
}

