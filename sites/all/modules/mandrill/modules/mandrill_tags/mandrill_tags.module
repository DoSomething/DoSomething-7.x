<?php

/**
 * @file
 * Adds functionality related to Mandrill Tags to Mandrill module.
 */

/**
 * Implements hook_menu().
 */
function mandrill_tags_menu() {
  $items = array();
  $items['admin/config/services/mandrill/tags'] = array(
    'title' => 'Manage Tags',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('mandrill_tags_form'),
    'access arguments' => array('administer mandrill'),
    'description' => 'Manage existing Mandrill tags using the Mandrill API.',
    'file' => 'mandrill.admin.inc',
    'type' => MENU_LOCAL_TASK,
    'weight' => 2,
  );

  return $items;
}