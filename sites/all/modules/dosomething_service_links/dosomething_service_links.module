<?php

/**
 * @file
 * Add the support for Forward module.
 */

/**
 * Implements hook_service_links().
 */
function dosomething_service_links_service_links() {
  $moddir = drupal_get_path('module', 'dosomething_service_links') . '/';

  $links = array();

  $links['tumblr'] = array(
    'name' => 'Tumblr',
    'link' => 'http://www.tumblr.com/share/link?url=<encoded-url>&name=<encoded-title>&description=<encoded-teaser>',
    'description' => t('Share on Tumblr'),
  );

  $links['ds_facebook'] = array(
    'name' => 'DS Facebook Like',
    'link' => '<encoded-url>',
    'javascript' => $moddir . 'fb_like.js',
    'description' => t('DoSomething.org Custom Like'),
  );


  return $links;
}
