<?php
/**
 * @file
 * Enable use of the StatHat service in Drupal - http://www.stathat.com.
 *
 * StatHat came about from our desire to track all our numbers from all the
 * languages we use as easily, accurately, and quickly as possible.
 *
 */

/*
 * Impliments hook_libraries_info() - Support for stathat.com graphing / report service
 */
function stathat_libraries_info() {
  
  $libraries['stathat'] = array(
    'name' => 'Stathat library',
    'vendor url' => 'https://www.stathat.com',
    'download url' => 'https://www.stathat.com/downloads/stathat.php',
    'version' => '1.0',
    'files' => array(
      'php' => array('stathat.php'),
    ),
  );
  
  return $libraries;
  
}

function stathat_library_loaded() {
  if (($stathat_library = libraries_load('stathat')) && !empty($stathat_library['loaded'])) {
    return TRUE;
  }
  return FALSE;
}
